<section class="product-section">
  <div class="container">
    <div class="inside-container">
      <h2 class="heading-type2 text-center">{{ section.settings.heading }}</h2>
      <p class="subheading-type2 text-center">{{ section.settings.subheading }}</p>
      <div class="row">
      {%- for block in section.blocks -%}
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 {% if forloop.last == true %}mt-5 mt-md-4 {% else %} mt-4{% endif %}">
          <div class="product-image-box">
            <img alt="{{ block.settings.heading}}" src="{{block.settings.image | img_url:'645x'}}" loading="lazy">
            <div class="text-center">
              {% unless block.settings.heading == blank %}<h2 class="heading-type2 mb-2">{{block.settings.heading}}</h2>{% endunless%}
              {% unless block.settings.subheading == blank %}<p class="subheading-type2">{{block.settings.subheading}}</p>{% endunless%}
              {% unless block.settings.link == blank %}<a class="primary-btn common-btn" href="{{block.settings.link}}">{{block.settings.button_label}}</a>{% endunless%}
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
</section>
<style>
  .product-section{
    background-color: {{section.settings.wrap_bg}};
  }
  .heading-type2 {
    color: {{ section.settings.hyper_heading }};
    font-size: {{section.settings.heading_size}}px;
  }
  .subheading-type2{
    color: {{ section.settings.subhyper_heading }};
    font-size: {{section.settings.subheading_size}}px;
  }
  .product-image-box .common-btn{
    background: {{section.settings.btn_bg}};
    border: 2px solid {{section.settings.btn_border}};
    color: {{section.settings.btn_txt_color}};
  }
  .product-image-box .common-btn:hover{
    background: {{section.settings.hoverbtn_bg}};
    border: 2px solid {{section.settings.hoverbtn_border}};
    color: {{section.settings.hovertxt_color}};
  }
</style>


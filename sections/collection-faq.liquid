<script>
  document.addEventListener("DOMContentLoaded", (event) => {
    let sectionsAdded = false;

    function addSectionsToRecentViews() {
      var popularSection  = document.querySelector('[data-box-type="Popular"]');
      var collectionFAQSection = document.getElementById('collection-FAQ');
      var additionalContentSection = document.getElementById('additional-content');
      
      if (!sectionsAdded && popularSection && collectionFAQSection && additionalContentSection) {
          popularSection.insertAdjacentElement('afterend', collectionFAQSection);
          collectionFAQSection.style.display = "block";

          popularSection.insertAdjacentElement('afterend', additionalContentSection);
          additionalContentSection.style.display = "block";
        sectionsAdded = true;
      }
    }
    addSectionsToRecentViews();
    setInterval(addSectionsToRecentViews, 1500);
    
  });
  

</script>


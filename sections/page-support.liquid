<div id="shopify-section-page-support">
<div class="support-container container">
  <div class="inside-container">
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'row' %}
                <section id="{{ block.settings.title | handleize }}" class="content-container width-row .section-{{ forloop.index }}-padding"  style="background: {{ block.settings.background_color }};margin-top: {{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px;">
                    <div class="column-title" style="color: {{ block.settings.font_color }};">
                        <h2 class="heading-type2 mb-4">{{ block.settings.title }}</h2>
                    </div>
                    <div class="column-content">
                        {{ block.settings.content }}
                        {% if block.settings.cta_url %}
                            <a href="{{ block.settings.cta_url }}" class="cta-button primary-btn common-btn" {% if block.settings.open_new_window %}target="_{{ block.settings.title | handleize }}"{% endif %}>{{ block.settings.cta_text }}</a>
                        {% endif %}
                    </div>
                </section>
    
            {% when 'column' %}
                <section id="{{ block.settings.title | handleize }}" class="content-container width-column .section-{{ forloop.index }}-padding" style="background: {{ block.settings.background_color }};margin-top: {{ block.settings.margin_top }}px; margin-bottom: {{ block.settings.margin_bottom }}px;">
                    <div class="content-wrap">
                        <h2 class="heading-type2 mb-4" style="color: {{ block.settings.font_color }};">{{ block.settings.title }}</h2>
                        <div class="column-content">
                            {{ block.settings.content }}
                        </div>
                        {% if block.settings.cta_url %}
                          <a href="{{ block.settings.cta_url }}" class="cta-button primary-btn common-btn" {% if block.settings.open_new_window %}target="_{{ block.settings.title | handleize }}"{% endif %}><span>{{ block.settings.cta_text }}</span></a>
                        {% endif %}
                    </div>
                </section>
    
        {% endcase %}
    {% endfor %}
  </div>
</div>
</div>

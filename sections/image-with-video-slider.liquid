<style>
  {%- for block in section.blocks -%}
  .top-carousel-img-{{ forloop.index0 }}
  {
    background-image: url("{{block.settings.image | image_url:width: 1900,pad_color: '000'}}");
  }
  @media screen and (max-width: 480px) {
  .top-carousel-img-{{ forloop.index0 }}
  {
    background-image: url("{{block.settings.mobile_image | img_url:'480x480'}}");
  }
  }
  
  {% endfor %}
  
  .top-slider {
    background-color: {{section.settings.slideshow_bg}};
  }
  .top-slider #overview-slider .carousel-indicators .active{
    border: {{ section.settings.dots_border }}px solid {{section.settings.dotsbgColor}};
    background-color: {{section.settings.dotsactiveColor}};
  }
  #overview-slider .carousel-indicators [data-bs-target]{
    background-color: {{section.settings.dotsbgColor}};
    border: {{ section.settings.dots_border }}px solid {{section.settings.dotsactiveColor}};
  }
  .slider-content .main-heading{
    font-size:{{section.settings.heading_size}}px;
    color:{{ section.settings.heading_color }};
  }
  .slider-content .sub-heading{
    font-size:{{section.settings.subheading_size}}px;
    color:{{ section.settings.subheading_color }};
  }
 .slider-content .common-btn{
    background: {{section.settings.buttonbg_color}};
    border: 2px solid {{section.settings.btn_border}};
    color: {{section.settings.btntext_color}};
 }
  .slider-content .common-btn:hover{
    background: {{section.settings.hover_bg}};
    border: 2px solid {{section.settings.hover_border}};
    color: {{section.settings.hover_color}};
  }
</style>
<section class="top-slider">
  <div class="container-">
    <div id="overview-slider" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
      {% assign showdots = false %}
      {%- for block in section.blocks -%}
      	{% if forloop.length > 1 %}
      	{% assign showdots = true %}
          <button type="button" data-bs-target="#overview-slider" data-bs-slide-to="{{ forloop.index0 }}" {% if forloop.first == true %}class="active" aria-current="true"{% endif %}></button>
      	{% endif %}
      {% endfor %} 
      </div>
      <div class="carousel-inner">
        {%- for block in section.blocks -%}
          <div class="carousel-item text-center {% if forloop.first == true %}active {% endif %}">
          <div class="set-bg-img top-carousel-img-{{ forloop.index0 }}">
            <div class="container">
              <div class="slider-content desktop text-start">
                {% unless block.settings.heading == blank %}<h1 class="main-heading">{{block.settings.heading}}</h1>{% endunless%}
                {% unless block.settings.subheading == blank %}<p class="sub-heading">{{block.settings.subheading}}</p>{% endunless%}
                {% unless block.settings.link == blank %}
                  <p>
                    <a class="secondary-btn common-btn" href="{{block.settings.link}}">{{block.settings.button_label}}</a>
                  </p>
                {% endunless%}
              </div>
              {% if block.settings.enabled_logo %}
                <img src="{{ block.settings.logo_image | img_url:'original' }}" alt="{{block.settings.heading}}" />
              {% endif %}
            </div>
          </div>
          <div class="container">
              <div class="slider-content mobile text-center">
                {% unless block.settings.heading == blank %}<h1 class="main-heading">{{block.settings.heading}}</h1>{% endunless%}
                {% unless block.settings.subheading == blank %}<p class="sub-heading">{{block.settings.subheading}}</p>{% endunless%}
                {% unless block.settings.link == blank %}
                  <p>
                    <a class="primary-btn common-btn" href="{{block.settings.link}}">{{block.settings.button_label}}</a>
                  </p>
                {% endunless%}
              </div>
            </div>
          </div>
        {% endfor %}  
      </div>
      {% if showdots %}
        <button class="carousel-control-prev" type="button" data-bs-target="#overview-slider" data-bs-slide="prev">
          <svg viewBox="0 0 128 128" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Icons/128x128/chevron-left" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
              <g class="carousel-chevron" transform="translate(47.000000, 32.000000)" fill="#fff" fill-rule="nonzero">
                <path
                  d="M0.925490554,63.066945 C0.416470749,62.5537681 0,62.0916232 0,62.0399647 C0,61.9883061 6.67640547,55.2404671 14.8364566,47.0447761 C22.9965077,38.8490775 29.6729132,32.1004208 29.6729132,32.0477612 C29.6729132,31.995094 22.9965077,25.2464373 14.8364566,17.0507463 C6.67640547,8.85504764 0,2.08414567 0,2.00428896 C0,1.81737839 1.81260414,0 1.99901851,0 C2.07660938,0 9.30856786,7.19999618 18.0700433,16 L34,32 L18.0700433,48 C9.30856786,56.7999962 2.07503443,64 1.99553385,64 C1.91603326,64 1.43451797,63.5801218 0.925490554,63.066945 L0.925490554,63.066945 Z"
                ></path>
              </g>
            </g>
          </svg>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#overview-slider" data-bs-slide="next">
          <svg viewBox="0 0 128 128"  version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Icons/128x128/chevron-left" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
            <g class="carousel-chevron" transform="translate(47.000000, 32.000000)" fill="#fff" fill-rule="nonzero">
            <path d="M0.925490554,63.066945 C0.416470749,62.5537681 0,62.0916232 0,62.0399647 C0,61.9883061 6.67640547,55.2404671 14.8364566,47.0447761 C22.9965077,38.8490775 29.6729132,32.1004208 29.6729132,32.0477612 C29.6729132,31.995094 22.9965077,25.2464373 14.8364566,17.0507463 C6.67640547,8.85504764 0,2.08414567 0,2.00428896 C0,1.81737839 1.81260414,0 1.99901851,0 C2.07660938,0 9.30856786,7.19999618 18.0700433,16 L34,32 L18.0700433,48 C9.30856786,56.7999962 2.07503443,64 1.99553385,64 C1.91603326,64 1.43451797,63.5801218 0.925490554,63.066945 L0.925490554,63.066945 Z"></path>
            </g>
            </g>
          </svg>
        </button>
      {% endif %}
      </div>
  </div>
</section>
{% schema %}
{
  "name": "t:sections.slideshow.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
       "type":"color",
       "id":"slideshow_bg",
       "label":"Slideshow Image Background color",
       "default":"#4931ae"
    },
    {
      "type": "header",
      "content": "Slideshow Dots Style"
    },
    {
      "type":"color",
      "id":"dotsbgColor",
      "label":"Dots background color",
      "default":"#ffffff"
    },
    {
      "type":"color",
      "id":"dotsactiveColor",
      "label":"Active Dots color",
      "default":"#4931ae"
    },
    {
      "type": "range",
      "id": "dots_border",
      "min": 1,
      "max": 5,
      "step": 1,
      "unit": "px",
      "label": "Dots Border pixel",
      "default": 3
    },
    {
      "type": "header",
      "content": "Heading Style"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#fff",
      "label": "Heading Font Color"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 25,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 42
    },
    {
      "type": "header",
      "content": "Sub Heading Style"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "default": "#fff",
      "label": "Sub Heading Font Color"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Sub Heading Font Size",
      "default": 18
    },
    {
      "type": "header",
      "content": "Button Style"
    },
    {
        "type": "color",
        "id": "buttonbg_color",
        "default": "#fff",
        "label": "Button Background Color"
    },
    {
      "type": "color",
      "id": "btntext_color",
      "default": "#000",
      "label": "Button Text Color"
    },
    {
      "type": "color",
      "id": "btn_border",
      "default": "#fff",
      "label": "Button Border Color"
    },
    {
      "type": "header",
      "content": "Button Hover Style"
	},
	{
      "type": "color",
      "id": "hover_bg",
      "default": "#000",
      "label": "Button Background Color"
	},
	{
      "type": "color",
      "id": "hover_color",
      "default": "#fff",
      "label": "Button Font Color"   
	},
    {
      "type": "color",
      "id": "hover_border",
      "default": "#000",
      "label": "Button Border Color"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.slideshow.blocks.slide.name",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image",
		  "info" :"1920*800 size"
        },
		{
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image",
		  "info" :"500*500 wider"	
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Image slide",
          "label": "t:sections.slideshow.blocks.slide.settings.heading.label",
		  "info" : "Please include heading here"
        },  
        {
          "type": "textarea",
          "id": "subheading",
          "default": "Tell your brand's story through images",
          "label": "t:sections.slideshow.blocks.slide.settings.subheading.label",
		  "info" : "Please include subheading here"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.slideshow.blocks.slide.settings.button_label.label",
          "info": "t:sections.slideshow.blocks.slide.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.slideshow.blocks.slide.settings.link.label"
        },
        {
          "type":"checkbox",
          "id":"enabled_logo",
          "label":"Show/Hide logo image in slide",
          "default":true
        },
        {
          "type":"image_picker",
          "id":"logo_image",
          "label":"Logo slide image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.slideshow.presets.name",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

        "label": "Testimonial Heading Color"
      },
      {
        "type": "range",
        "id": "testi_size",
        "min": 35,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Testimonial Heading Font Size",
        "default": 42
      },
      {
        "type": "header",
        "content": "Slider Dot Indicator Style"
      },
      {
        "type":"color",
        "id":"dotsbg",
        "label":"Dots background color",
        "default":"#3c3fbc"
      },
      {
        "type":"color",
        "id":"doactiveColor",
        "label":"Active Dots color",
        "default":"#3c3fbc"
      },
      {
        "type": "range",
        "id": "dotsborder",
        "min": 1,
        "max": 5,
        "step": 1,
        "unit": "px",
        "label": "Dots Border pixel",
        "default": 3
      }
    ],
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
    		"info" : "Please include Testimonial Title here"
          },
          {
            "type": "image_picker",
            "id": "image",          
            "label": "Logo Image"
          } 
        ]
      },
      {
        "type":"featured_logo",
         "name": "Featured In Logo",
         "settings": [
           {
              "type": "image_picker",
              "id": "image",          
              "label": "Featured In Logo Image"
           } 
         ]
      }
    ],
    "presets": [
      {
        "name": "Testimonial & Featured",
         "blocks": [
           {
             "type": "testimonial"
           },
           {
             "type":"featured_logo"
           }
         ]
      }
    ]
  }
{% endschema %}


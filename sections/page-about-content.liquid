<section class="about-hyper-section about_bg">
<div class="container">
  <div class="inside-container">
    <div class="about-hyper-content">
      <h2 class="main-heading about_heading">{{ section.settings.heading }}</h2>
      <div class="about_content">{{ section.settings.abount_content }}</div>
    </div>
  </div>
</div>
</section>


<style>
 .about_bg{
   background-color: {{section.settings.about_bg}};
 }
 .about_heading{
   color: {{section.settings.about_heading}};
 } 
 .about_content{
   color: {{section.settings.abountContentColor}};
 }
</style>
      

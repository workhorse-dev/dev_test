  {
    "name": "About Us Content",
    "settings": [
      {
        "type": "header",
        "content": "Section Background Style"
      },
      {
        "type": "color",
        "id": "about_bg",
        "default": "#fff",
        "label": "Section Background Color"
      },
      {
        "type": "header",
        "content": "About Content"
      },
      {
        "type":"text",
        "id":"heading",
        "label":"Heaading"
      },
      {
        "type": "color",
        "id": "about_heading",
        "default": "#000",
        "label": "Heading Color"
      },
      {
        "type": "textarea",
        "id": "abount_content",
        "label": "About Content"
      },
      {
        "type": "color",
        "id": "abountContentColor",
        "default": "#000",
        "label": "Content Color"
      }
    ]
  }
{% endschema %}


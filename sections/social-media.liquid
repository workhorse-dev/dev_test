<section class="show-us-section">
  <div class="container">
    <div class="inside-container">
      <div class="show-us-text-top social_header">
        <h2 class="heading-type2 text-center">{{ section.settings.heading }}</h2>
        <p class="text-center">{{ section.settings.subheading }}</p>
        {% render 'social-icons' %}
      </div>
      <div class="show-us-desktop">
        <div class="row">
          {%- for block in section.blocks -%}
            <div class="col-12 col-sm-4 col-md-4 col-lg-4">
            <div class="showus-content">
              <a href="{{ block.settings.link }}">
                <img src="{{block.settings.image | img_url:'420x'}}" alt="show us image1" class="img-fluid mb-3" loading="lazy"/>
                <p class="text-center social_title">{{block.settings.heading}}</p>
              </a>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
      <div class="show-us-mobile">
        <div class="owl-carousel show-us-carousel">
        {%- for block in section.blocks -%}
          <div class="item">
            <div class="showus-content">
              <a href="{{ block.settings.link }}">
                <img src="{{block.settings.image | img_url:'420x'}}" alt="show us image3" class="img-fluid mb-3" loading="lazy"/>
                <p class="text-center social_title">{{block.settings.heading}}</p>
              </a>
            </div>
          </div>
        {% endfor %}  
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .show-us-section{
    background-color: {{section.settings.social_bg}};
  }
  .show-us-section .social_header h2{
    color: {{ section.settings.social_heading }};
    font-size: {{section.settings.social_size}}px;
  }
  .show-us-section .social_header p{
    color: {{ section.settings.subsocial_heading}};
    font-size: {{section.settings.subsocial_size}}px;
  }
   .show-us-section .social_title{
    color: {{ section.settings.social_titlecolor }};
    font-size: {{section.settings.social_titlesize}}px;
  }
</style>
{% schema %}
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Section Background Style"
      },
      {
        "type": "color",
        "id": "social_bg",
        "default": "#fff",
        "label": "Section Background Color"
      },
      {
        "type": "text",
        "id": "heading",
        "default": "Show Us How You Go Beyond",
        "label": "t:sections.slideshow.blocks.slide.settings.heading.label",
        "info" : "Please include heading here"
      },
      {
        "type": "text",
        "id": "subheading",
        "default": "Share and Follow",
        "label": "Sub heading",
        "info" : "Please include sub heading here"
      },
      {
        "type": "color",
        "id": "social_heading",
        "default": "#000",
        "label": "Heading Color"
      },
      {
        "type": "range",
        "id": "social_size",
        "min": 25,
        "max": 36,
        "step": 1,
        "unit": "px",
        "label": "Heading Font Size",
        "default": 32
      },
      {
        "type": "color",
        "id": "subsocial_heading",
        "default": "#000",
        "label": "Sub Heading Color"
      },
      {
        "type": "range",
        "id": "subsocial_size",
        "min": 10,
        "max": 30,
        "step": 1,
        "unit": "px",
        "label": "Subheading Font Size",
        "default": 16
      },
      {
        "type": "color",
        "id": "social_titlecolor",
        "default": "#000",
        "label": "Image Title Color"
      },
      {
        "type": "range",
        "id": "social_titlesize",
        "min": 10,
        "max": 30,
        "step": 1,
        "unit": "px",
        "label": "Subheading Font Size",
        "default": 16
      }
        
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "t:sections.slideshow.blocks.slide.name",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.slideshow.blocks.slide.settings.image.label"
          },
          {
            "type": "text",
            "id": "heading",
            "default": "Image slide",
            "label": "t:sections.slideshow.blocks.slide.settings.heading.label",
    		"info" : "Please include heading here"
          },
          {
            "type": "url",
            "id": "link",
            "label": "t:sections.slideshow.blocks.slide.settings.link.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Social Media Show US",
        "blocks": [
          {
            "type": "slide"
          },
          {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}


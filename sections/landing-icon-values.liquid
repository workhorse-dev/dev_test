  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="landing-icon-values"
>
</script>

{%
  include 'landing-icon-values',
  section_id: section.id,
  title: section.settings.title,
  title_color: section.settings.title_color,
  blocks: section.blocks
%}

{% schema %}
{
  "name": "Icon values",
  "class": "section-landing-icon-values",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Heading Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "image-item",
      "name": "Image item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ]
}

{% endschema %}
